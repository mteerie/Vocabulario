<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Vocabulario" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_purple_900</item>
        <item name="colorPrimaryVariant">@color/deep_purple_900_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_200</item>
        <item name="colorSecondaryVariant">@color/red_200_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/primaryColorActionBar</item>
        <item name="snackbarStyle">@style/secondaryColorSnackBar</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="primaryColorActionBar" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="backgroundTint">@color/deep_purple_900</item>
    </style>

    <style name="secondaryColorSnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/deep_orange_200</item>
    </style>

</resources>