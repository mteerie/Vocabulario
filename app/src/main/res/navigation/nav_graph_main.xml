<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.inf3005.android.vocabulario.list.ListFragment"
        android:label="Vokabelliste"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_addEditFragment"
            app:destination="@id/addEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.inf3005.android.vocabulario.InfoFragment"
        android:label="Information"
        tools:layout="@layout/fragment_info" />
    <fragment
        android:id="@+id/addEditFragment"
        android:name="com.inf3005.android.vocabulario.add_edit.AddEditFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_add_edit" >
        <argument
            android:name="entry"
            app:argType="com.inf3005.android.vocabulario.data.Vocabulary"
            app:nullable="true" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
</navigation>