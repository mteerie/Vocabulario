<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".utilities.InfoFragment"
    android:layout_marginBottom="?attr/actionBarSize">

    <ImageView
        android:id="@+id/aboutImageList"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="128dp"
        app:tint="@color/lavender"
        app:layout_constraintBottom_toTopOf="@+id/info_text_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_info_list"
        android:contentDescription="@string/fragment_info_list_icon"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/aboutImagePlus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="128dp"
        app:tint="@color/lavender"
        app:layout_constraintBottom_toTopOf="@+id/info_text_1"
        app:layout_constraintEnd_toStartOf="@+id/aboutImagePlay"
        app:layout_constraintStart_toEndOf="@+id/aboutImageList"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_info_plus"
        android:contentDescription="@string/fragment_info_plus_icon"/>

    <ImageView
        android:id="@+id/aboutImagePlay"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="128dp"
        app:tint="@color/lavender"
        app:layout_constraintBottom_toTopOf="@+id/info_text_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_info_play"
        android:contentDescription="@string/fragment_info_play_icon"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/info_text_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32sp"
        android:layout_marginEnd="32sp"
        android:text="@string/info_text_1"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info_text_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32sp"
        android:layout_marginTop="32sp"
        android:layout_marginEnd="32sp"
        android:text="@string/info_text_2"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_text_1" />

</androidx.constraintlayout.widget.ConstraintLayout>