<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/item_deutsch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_item_deutsch"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="18sp"
            android:fontFamily="@v26/roboto_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_spanisch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_item_spanisch"
            android:fontFamily="@v26/roboto_italic"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_deutsch" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>